---
import square from '../../public/square.png'
import { Card } from './ui/card'
import CardComponent from "./CardComponent"

---
 
 
 <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 mt-10">
    <div class="w-full relative col-span-1">
        <img src={square.src} alt="square" class="h-full w-full object-cover rounded-2xl">
    </div>
    <div class="flex flex-col w-full col-span-1 lg:col-span-2 gap-4">
        <CardComponent client:idle />
    </div>
 </div>